<h1>スキル一覧</h1>
<table>
  <thead>
    <tr>
      <th scope="col">No.</th>
      <th scope="col">スキル名称</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    <% @skills.each.with_index(1) do |skill, i| %>
      <tr>
        <th scope="row"><%= i %></th>
        <td><%= skill.name %></td>
        <td>
          <%= link_to "詳細", skill %>
          <%= link_to "編集", edit_skill_path(skill) %>
          <%= link_to "削除", skill, method: :delete, data: { confirm: "削除しますか?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
